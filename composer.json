{
  "name": "aslamhus/mailgun-email-wrapper",
  "description": "a fluent interface for sending Mailgun emails",
  "type": "library",
  "require": {
    "mailgun/mailgun-php": "^4.3",
    "symfony/http-client": "*",
    "nyholm/psr7": "^1.8"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Aslamhus\\Email\\Mailgun\\": "src/"
    }
  },
  "scripts": {
    "test": [
      "./vendor/bin/phpunit --verbose ./src/tests"
    ]
  },
  "authors": [
    {
      "name": "aslamhus",
      "email": "aslam.percy.husain@gmail.com"
    }
  ],
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
